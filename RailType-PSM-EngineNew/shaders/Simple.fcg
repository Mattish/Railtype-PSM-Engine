void main( float4 out Color : COLOR,
		   half2 in a_TexCoord : TEXCOORD0,
		   float in a_Number : TEXCOORD1)
{
	int theNumber = int(a_Number);
	if (theNumber == 0)
		Color = float4(1.0f,0.0f,0.0f,1.0f);
	else if (theNumber == 1)
		Color = float4(0.0f,1.0f,0.0f,1.0f);
	else
		Color = float4(0.0f,0.0f,1.0f,1.0f);
}
